{% extends "base.html.twig" %}

{% set route = app.request.attributes.get('_route') %}
{% set routeParams = app.request.attributes.get('_route_params')|merge(app.request.query.all) %}

{% block content %}
	<h1 class="text-center">
        <a href="{{ path('onion_index') }}">
            Onions
        </a>
    </h1>

    <br>

    <div class="container">
    	<div class="row">
    		<div class="col-xs-12 col-md-10 col-md-offset-1">
				{% include "@App/Onion/form.html.twig" %}
			</div>
		</div>

		<br>

		{% if onions.totalItemCount > 0 %}
		    <p class="text-center">
				{{ onions.totalItemCount }} onion{{ onions.totalItemCount > 1 ? "s" }}
			</p>

	    	<div class="text-center">
			    {{ knp_pagination_render(onions) }}
			</div>

			{% include "@App/Onion/table_pagination.html.twig" %}

			<div class="text-center">
			    {{ knp_pagination_render(onions) }}
			</div>
		{% else %}
			<div class="alert alert-info">
				No onion found.
			</div>
		{% endif %}
	</div>
{% endblock %}
