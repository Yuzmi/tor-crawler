<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Tor Crawler{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {# jQuery #}
        <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>

        {# Bootstrap #}
        <link href="{{ asset('css/bootstrap-3.3.7.min.css') }}" rel="stylesheet">
        <script src="{{ asset('js/bootstrap-3.3.7.min.js') }}"></script>

        {# Font Awesome #}
        <link href="{{ asset('css/font-awesome-4.7.0.min.css') }}" rel="stylesheet">

        {% block stylesheets %}
            <style>
                body > .alert { margin-bottom:0; }
                .table > tbody > tr > td { vertical-align: middle; }
            </style>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {# Flash messages #}
            {% if app.session.flashbag.peekAll|length > 0 %}
                {% for type, flash_messages in app.session.flashBag.all %}
                    {% for flash_message in flash_messages %}
                        <div class="alert alert-{{ type }}">
                            {% if type == 'success' %}
                                <i class="fa fa-check"></i>
                            {% elseif type == "danger" %}
                                <i class="fa fa-exclamation-triangle"></i>
                            {% endif %}
                            {{ flash_message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}

            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            Tor Crawler
                        </a>
                    </div>
                    <div class="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="{{ path('onion_index') }}">
                                    Onions
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('resource_index') }}">
                                    URLs
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('word_index') }}">
                                    Words
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            {% block content %}{% endblock %}
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
